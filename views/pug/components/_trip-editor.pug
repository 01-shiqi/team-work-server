            
.form-group.col-md-12
    label.control-label.worklog-edit-label 任务名称
    select.form-control.item-can-modify.customSelect#task(placeholder="选择任务")
        optgroup(label="选择任务")
            - for (var i = 0; i < tasks.length; i++)
                option(value=`${tasks[i].id}`, data-model=`${tasks[i].model}`, data-type=`${tasks[i].type}`, data-work-object=`${tasks[i].workObject}`, data-work-place=`${tasks[i].workPlace}`, data-task-progress=`${tasks[i].progress}`, data-begin-time=`${tasks[i].beginTime}`, data-end-time=`${tasks[i].endTime}`) #{tasks[i].name}

.form-group.col-md-3
    label.control-label.worklog-edit-label 所属型号
    select.form-control.customSelect#model
        optgroup(label="选择所属型号")
            - for (var i = 0; i < models.length; i++)
                option #{models[i].name}

.form-group.col-md-3
    label.control-label.worklog-edit-label 工作类型
    select.form-control.customSelect#workType
        optgroup(label="选择工作类型")
            - for (var i = 0; i < workTypes.length; i++)
                option #{workTypes[i].name}

.form-group.col-md-3
    label.control-label.worklog-edit-label 工作对象
    select.form-control.customSelect-tags#workObject(placeholder="选择或录入工作对象，如XXXX系统、XXXX软件")
        optgroup(label="选择或录入工作对象")
            - for (var i = 0; i < workObjects.length; i++)
                option #{workObjects[i].name}

.form-group.col-md-3
    label.control-label.worklog-edit-label 出差地点
    select.form-control.customSelect-tags#workPlace
        optgroup(label="选择或录入工作地点")
            - for (var i = 0; i < workPlaces.length; i++)
                option #{workPlaces[i].name}

.form-group.col-md-3
    label.control-label 计划出发日期
    input.form-control.item-can-modify.datepicker#planBeginDate(type="text",placeholder="选择开始日期")

.form-group.col-md-3
    label.control-label 计划完成日期
    input.form-control.item-can-modify.datepicker#planEndDate(type="text",placeholder="选择结束日期")

.form-group.col-md-3
    label.control-label 实际出发日期
    input.form-control.item-need-finish.datepicker#actualBeginDate(type="text",placeholder="选择开始日期")

.form-group.col-md-3
    label.control-label 实际完成日期
    input.form-control.item-need-finish.datepicker#actualEndDate(type="text",placeholder="选择结束日期")

.form-group.col-md-12
    label(for='description') 出差工作情况
    textarea#description.form-control.item-need-finish(rows='5', placeholder='请录入出差期间工作情况')