.app-sidebar__overlay(data-toggle="sidebar")
aside.app-sidebar

	.app-sidebar__user
		img.app-sidebar__user-avatar(src='/img/default.jpg', alt='User Image')
		div
			p.app-sidebar__user-name#lbl-true-name(style="font-weight:bold;padding-top:0px;") #{trueName}
			p.app-sidebar__user-designationlbl-job-position(style="padding-top:5px;margin-bottom:0px;") #{jobPosition}

	ul.app-menu

		if role < 10
			li
				a.app-menu__item(href='create-task' class={'active': activePage == 'create-task'})
					i.app-menu__icon.fa.fa-plus
					span.app-menu__label 创建任务

			li
				a.app-menu__item(href='manage-tasks' class={'active': activePage == 'manage-tasks'})
					i.app-menu__icon.fa.fa-tasks
					span.app-menu__label 任务管理

			li
				a.app-menu__item(href='manage-worklogs' class={'active': activePage == 'manage-worklogs'})
					i.app-menu__icon.fa.fa-list
					span.app-menu__label 日志管理

			li
				a.app-menu__item(href='verify-trips' class={'active': activePage == 'verify-trips'})
					i.app-menu__icon.fa.fa-briefcase
					span.app-menu__label 出差审批

			li
				a.app-menu__item(href='verify-leaves' class={'active': activePage == 'verify-leaves'})
					i.app-menu__icon.fa.fa-clock-o
					span.app-menu__label 休假审批

		if role >= 10
			li
				a.app-menu__item(href='my-tasks?pageIndex=0' class={'active': activePage == 'my-tasks'})
					i.app-menu__icon.fa.fa-calendar 
					span.app-menu__label 我的任务

			li
				a.app-menu__item(href='write-worklog' class={'active': activePage == 'write-worklog'})
					i.app-menu__icon.fa.fa-edit
					span.app-menu__label 录入日志

			li
				a.app-menu__item(href='my-worklogs?pageIndex=0' class={'active': activePage == 'my-worklogs'})
					i.app-menu__icon.fa.fa-calendar-check-o
					span.app-menu__label 我的日志

			li
				a.app-menu__item(href='apply-for-trip?pageIndex=0' class={'active': activePage == 'apply-for-trip'})
					i.app-menu__icon.fa.fa-briefcase
					span.app-menu__label 出差申请

			li
				a.app-menu__item(href='apply-for-leave?pageIndex=0' class={'active': activePage == 'apply-for-leave'})
					i.app-menu__icon.fa.fa-clock-o
					span.app-menu__label 休假申请
